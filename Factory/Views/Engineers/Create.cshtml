@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer
<h3>Add new engineer</h3>
<hr />
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger", @style = "font-weight: 600;" })
</p>
<p>@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger", @style = "font-weight: 600;" })
</p>
<p>@Html.ValidationMessageFor(model => model.Renewal, "", new { @class = "text-danger", @style = "font-weight: 600;" })
</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br />
  @Html.LabelFor(model => model.Level)
  @Html.TextBoxFor(model => model.Level)
  <br />
  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)
  <br />
  @Html.LabelFor(model => model.Renewal, "License Renewal Date")
  @Html.TextBoxFor(model => model.Renewal, new { @type = "date" })
  <br />
  <input type="submit" value="add to system" />
}