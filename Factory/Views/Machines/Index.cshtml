@{
  Layout = "_Layout";
}
@using Factory.Models;

<h1>Current Machines</h1>
@if (@Model.Count == 0)
{
  <h3>No machines are in the system at this point</h3>
}

@foreach (Machine machine in Model)
{
  <h3>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</h3>
}
<p>@Html.ActionLink("Add machine", "Create")</p>